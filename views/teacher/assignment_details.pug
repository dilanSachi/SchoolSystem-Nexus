    // ngView:
    .ng-scope(ng-view='', ng-class="{'blur-view': showPlayerView || showModal || showQuoteView}", style='')
      .introduction.ng-scope
    #titles(style = "top:5%;width : 100%").ng-scope
      h1(style = "margin-left:70px")= assignment.title
      h3(style = "margin-left:70px")= assignment.body_assignment
    #titles(style = "top:25%;width : 100%").ng-scope
      // <canvas id="canvas" class="title-animated" ng-show="loaded"></canvas>

      #table_info_details
        .tbl-header
          table(cellpadding='0', cellspacing='0', border='0')
            thead
              tr
                th 
                th Details

        .tbl-content(style = "height:305px")
          table(cellpadding='0', cellspacing='0', border='0')
            tbody
              tr
                td(style= "color:#fff; text-decoration: none; font-size: 1em" ) Subission Satus
                td(style= "color:#fff; text-decoration: none; font-size: 1em" ) No Submission
              tr
                td(style= "color:#fff; text-decoration: none; font-size: 1em" ) Due Date
                td(style= "color:#fff; text-decoration: none; font-size: 1em" )= assignment.due_date
              tr
                td(style= "color:#fff; text-decoration: none; font-size: 1em" ) Uploaded Date
                td(style= "color:#fff; text-decoration: none; font-size: 1em" )= assignment.uploaded_date
              tr
                td(style= "color:#fff; text-decoration: none; font-size: 1em" ) Marks Allocated
                td(style= "color:#fff; text-decoration: none; font-size: 1em" )= assignment.marks_allocated
              tr
                td(style= "color:#fff; text-decoration: none; font-size: 1em" ) Assignment Type
                td(style= "color:#fff; text-decoration: none; font-size: 1em" )= assignment.assignment_type
              tr
                td(style= "color:#fff; text-decoration: none; font-size: 1em" ) Has to Upload a File
                td(style= "color:#fff; text-decoration: none; font-size: 1em" )= assignment.has_to_upload_a_file
              tr
                td(style= "color:#fff; text-decoration: none; font-size: 1em" ) Marks
                td(style= "color:#fff; text-decoration: none; font-size: 1em" ) 0.0

      #titles(style = "top:110%; width:70%; margin-left:200px").ng-scope
        #form-group
          form(method = 'POST', action = '/assignments/details/'+assignment._id)
            label(style = "font-family: 'Roboto', sans-serif; color :#fff") Body:
            textarea.form-control(name = 'assignment_submission', placeholder='Assignment details',rows='8',  required  = '')
            br
            input.btn.btn-primary(type = 'submit', value = 'Submit')



        
                    
