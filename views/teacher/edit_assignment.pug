      #form_Info
        form(method = 'POST', action = '/assignments/edit/'+assignment._id)
          #form-group
            label(style = "font-family: 'Roboto', sans-serif; color :#fff") Title:
            input.form-control(name = 'title', type = 'text', value = assignment.title, required  = '')
            br
          #form-group
            label(style = "font-family: 'Roboto', sans-serif; color :#fff") Due Date:
            input.form-control(name = 'due_date', type = 'text', value = assignment.due_date ,required  = '')
            br
          #form-group
            label(style = "font-family: 'Roboto', sans-serif; color :#fff") Marks Allocated:
            input.form-control(name = 'marks_allocated', type = 'text', value = assignment.marks_allocated ,required  = '')
            br
          #form-group
            label(style = "font-family: 'Roboto', sans-serif; color :#fff") Assignment Type:
            input.form-control(name = 'assignment_type', type = 'text', value = assignment.assignment_type ,required  = '')
          br
          #form-group
            label(style = "font-family: 'Roboto', sans-serif; color :#fff") Has to upload a File 
            .btn-group.btn-group-toggle(data-toggle='buttons')
              label.btn(style="margin-left:5em").btn-secondary
                input#option1(type='radio', name='has_to_upload_a_file', value='1', autocomplete='off')
                | Yes
              label.btn.btn-secondary
                input#option2(type='radio', name='has_to_upload_a_file', value='2', autocomplete='off')
                | No                

      
          #form-group
            label(style = "font-family: 'Roboto', sans-serif; color :#fff") Body:
            textarea.form-control(name = 'body', placeholder='Assignment details',rows='8',  required  = '')= assignment.body
