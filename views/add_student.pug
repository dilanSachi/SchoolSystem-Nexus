  body
    // particles.js container
    #particles-js
      canvas.particles-js-canvas-el(style='width: 100%; height: 100%;', width='1402', height='752')
    #titles(style = "top:20%").ng-scope
      .signup__container
        //.container__child.signup__thumbnail
        //  .signup__overlay
        .container__child.signup__form
          != messages('message', locals)
          if errors
            each error, i in errors
              div(class="alert alert-danger") #{error.msg}
          form(method='POST', action='/users/student')
            .form-group
              label(for='username') Username
              input.form-control(type='text', name='username', placeholder='james.bond', required='')
            .form-group
              label(for='email') Email
              input.form-control(type='text', name='email', placeholder='james.bond@spectre.com', required='')
            .form-group
              label(for='password') Password
              input.form-control(type='password', name='password', placeholder='********', required='')
            .form-group
              label(for='passwordRepeat') Repeat Password
              input.form-control(type='password', name='passwordRepeat', placeholder='********', required='')
            .m-t-lg
              ul.list-inline
                li
                  input.btn.btn--form(type='submit', value='Register')
    script(src = '/bower_components/jquery/dist/jquery.js')
